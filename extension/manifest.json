{
  "manifest_version": 3,
  "name": "Secure Password Manager",
  "version": "1.0.0",
  "description": "Secure vault sync + autofill",
  "permissions": ["storage", "activeTab", "scripting"],
  "host_permissions": ["<all_urls>", "http://localhost:8000/*"],
  "action": {
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["api.js", "storage.js", "content.js"]
    }
  ]
}
